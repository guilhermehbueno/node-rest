<!DOCTYPE html>
<% include ../header %>

<header>
	<h2>Dados do Contato</h2>
</header>

<section>
	<form action="/contatos/<%- id%>" method="post">
		<input type="hidden" name="_method" value="delete">
		<p><label>Nome:</label> <%- contato.nome %></p>
		<p><label>Email:</label> <%- contato.email %></p>
		<button type="submit">Excluir</button>
		<a href="/contatos/<%- id%>/edit">Editar</a>
	</form>
</section>

<% include ../exit %>
<% include ../footer %>